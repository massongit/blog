---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";

interface Props {
    frontmatter: {
        title: string;
        date: string
        description: string;
    }
}

const { title, date, description } = Astro.props.frontmatter;
---

<Layout title={title}>
    <div class="container">
        <Header/>
        <div class="metadata">
            <p>{date}</p>
            <h1>{title}</h1>
            <p>{description}</p>
        </div>
        <div class="content">
            <article>
                <slot/>
            </article>
        </div>
        <footer>
            <p>&copy; {new Date().getFullYear()} m1sk9</p>
        </footer>
    </div>
</Layout>

<style>

    .container {
        width: 80%;
        margin: 0 auto;
        color: white;
    }

    .metadata {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.015rem;
        border-bottom: 1px solid gray;
    }

    .content {
        margin-top: 10px;
    }

    footer {
        margin-top: 30px;
        align-items: flex-start;
        border-top: 1px solid white;
    }

    article :global(h1) {
        font-size: 1.5em;
        border-bottom: 1px solid gray;
    }

    article :global(h2) {
        font-size: 1.25em;
        border-bottom: 1px solid gray;
    }

    article :global(h3) {
        font-size: 1.00em;
        border-bottom: 1px solid gray;
    }

    article :global(p) {
        text-align: justify;
        font-size: 1rem;
    }

    article :global(hr) {
        border-top: 1px solid gray
    }

    article :global(ul) {
        list-style: disc;
    }

    article :global(img) {
        width: 900px;
        height: 900px;
    }

    article :global(ol) {
        list-style: decimal;
    }

    article :global(blockquote) {
        border-left: 3px solid gray;
        padding-left: 10px;
    }

    article :global(a) {
        color: aqua;
        text-decoration: underline;
    }

    @media (max-width: 600px) {
        article :global(img) {
            width: 300px;
            height: 300px;
        }
    }

</style>
